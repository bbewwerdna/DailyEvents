ConnectionString connectionString = new ConnectionString("mongodb+srv://bbewwerdna:rosceaux8@cluster0.yyoy8.mongodb.net/myFirstDatabase?retryWrites=true&w=majority");
MongoClientSettings settings = MongoClientSettings.builder()
